programa
{
	funcao inicio()
	{			  
		inteiro opcao
		
			escreva("Escolha uma opção entre 1 e 15:\n")
			leia(opcao)
		
				escolha (opcao)
				{
					caso 1:		
					escreva("Alimento não perecível")
					pare

					caso 2: 
					caso 3: 
					caso 4:
					escreva("Alimento perecivel")
					pare

					caso 7:
					escreva("Higiene pessoal")
					pare

					caso 5:
					caso 6:
					escreva("Vestuário")
					pare

					caso contrario:
					escreva("Inválido")
		}
	}
}
