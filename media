programa {
  funcao inicio() {
    real soma = 0, numero, media
    inteiro quantidade = 0

    escreva("Insira números reais maiores que zero. Digite 0 para encerrar.\n")

    faca {
      escreva("Digite um número: ")
      leia(numero)

      se (numero > 0) {
        soma = soma + numero
        quantidade = quantidade + 1
      }

    } enquanto (numero != 0)

    se (quantidade > 0) {
      media = soma / quantidade
      escreva("Quantidade de números:\n", quantidade,"\n")
      escreva("Média dos números:\n", media)
    } senao {
      escreva("Nenhum número válido foi inserido.")
    }
  }
}
